{
  "source": "./source",
  "destination": "./dist",
  "metadata": {
    "title": "Caitlin Fullam",
    "description": "Photography by Caitlin Fullam"
  },
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":project-title"
    },
    "metalsmith-layouts": {
      "engine": "jade",
      "directory": "./templates"
    },
    "metalsmith-clean-css": {
      "files": "source/**/*.css",
      "sourceMap": true
    },
    "metalsmith-static": {
      "src": "public",
      "dest": "."
    }
  }
}
